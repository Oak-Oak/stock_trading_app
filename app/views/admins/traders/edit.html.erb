<div class="bg-[url('/bg.jpg')] text-white min-h-screen p-4">

  <nav class="pl-4 pr-6 pt-6 pb-4 flex justify-between">
    <div>
      <h1 class="font-bold text-4xl">Edit Trader</h1>
      <%= link_to 'Back to Dashboard', admins_dashboard_path, class: "text-xl font-bold text-white-500 hover:underline mt-2" %>
    </div>
    <%= form_tag(destroy_user_session_path, method: :delete) do %>
      <%= submit_tag "Sign out", class: "cursor-pointer border p-2 rounded-md border-gray-500 bg-gray-500" %>
    <% end %>
  </nav>

  <div class="flex justify-center items-center">
    <div class="w-1/3 border border-white rounded-lg p-4">
      <%= form_for @trader, url: admins_trader_path(@trader), method: :patch do |f| %>
        <div class="mb-4">
          <%= f.label :email, class: "block text-lg font-bold" %>
          <%= f.text_field :email, class: "w-full p-2 rounded-md border border-white" %>
        </div>
        <div class="mb-4">
          <%= f.label :approved, class: "block text-lg font-bold" %>
          <%= f.check_box :approved, class: "mr-2" %>
        </div>
        <%= f.submit 'Update Trader', class: "cursor-pointer border border-green-600 rounded-lg bg-green-600 text-white py-2 px-4 hover:bg-green-700" %>
      <% end %>
      <%= link_to 'Cancel', admins_trader_path(@trader), class: "block mt-4 text-lg font-bold text-white-500 hover:underline" %>
    </div>
  </div>

</div>
