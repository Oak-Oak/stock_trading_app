<div class="bg-slate-800 min-h-screen text-white flex flex-col items-center justify-center">

  <div class="p-20 bg-slate-900 border border-slate-800 rounded-xl">
    <h2 class="text-3xl font-bold mb-6">Change your password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="mb-4">
        <%= f.label :password, "New password", class: "text-xl" %><br />
        <% if @minimum_password_length %>
          <em class="text-sm">(Minimum <%= @minimum_password_length %> characters)</em><br />
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full rounded-md p-2" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, "Confirm new password", class: "text-xl" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full rounded-md p-2" %>
      </div>

      <div class="actions border border-yellow-400 bg-yellow-400 rounded-lg mb-3 cursor-pointer p-3 flex justify-center items-center">
        <%= f.submit "Change my password", class: "text-xl font-bold" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>

</div>
