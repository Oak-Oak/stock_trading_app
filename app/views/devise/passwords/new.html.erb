<div class="bg-slate-800 min-h-screen text-white flex flex-col items-center justify-center">

  <div class="p-20 bg-slate-900 border border-slate-800 rounded-xl">
    <h2 class="text-3xl font-bold mb-6">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: "text-xl" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full rounded-md p-2" %>
      </div>

      <div class="actions border border-yellow-400 bg-yellow-400 rounded-lg mb-3 cursor-pointer p-3 flex justify-center items-center">
        <%= f.submit "Send me reset password instructions", class: "text-xl font-bold" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>

</div>
