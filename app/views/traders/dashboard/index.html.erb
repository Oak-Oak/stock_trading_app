<% if current_user && current_user.approved %>
    <h1>Welcome to the Trader Dashboard</h1>
    <p>This is the landing page for the trader dashboard.</p>
    <p>Here you can view your portfolio, transactions, and perform stock-related actions.</p>

<table>
  <thead>
    <tr>
      <th>Stock</th>
      <th>Total Quantity</th>
    </tr>
  </thead>
  <tbody>
    <% @total_quantity_per_stock.each do |symbol, total_quantity| %>
      <tr>
        <td><%= symbol %></td>
        <td><%= total_quantity %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2><%= link_to 'Trade', trader_transactions_path(trader_id: current_user.id) %></h2>

<% else %>
    <%= render 'pending_approval' %>
<% end %>


<%= form_tag(destroy_user_session_path, method: :delete) do %>
  <%= submit_tag "Sign out" %>
<% end %>

